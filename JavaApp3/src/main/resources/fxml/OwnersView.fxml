<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@/fxml/tenants-style.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javaapp3.OwnersController">
   <left>
      <VBox styleClass="sidebar" prefWidth="250.0">
         <children>
            <Label styleClass="sidebar-title" alignment="CENTER" prefHeight="80.0" prefWidth="250.0" text="ARM System" />
            <Button onAction="#handleGoToDashboard" styleClass="sidebar-button" text="Dashboard" />
            <Button styleClass="sidebar-button-selected" text="Owners" />
            <Button onAction="#handleGoToTenants" styleClass="sidebar-button" text="Tenants" />
            <Button onAction="#handleGoToApartments" styleClass="sidebar-button" text="Apartments" />
            <Button onAction="#handleGoToPayments" styleClass="sidebar-button" text="Payments" />
            <Button onAction="#handleGoToAssignApartment" styleClass="sidebar-button" text="Assign Apartment"/>
         </children>
      </VBox>
   </left>
   <center>
      <VBox style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
               <padding><Insets left="20.0" right="20.0" /></padding>
               <children>
                  <Label text="Owners"><font><Font name="System Bold" size="36.0" /></font></Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button onAction="#handleAddOwner" styleClass="add-button" text="+ Add Owner" />
               </children>
            </HBox>
            <VBox style="-fx-background-color: white; -fx-background-radius: 10;" VBox.vgrow="ALWAYS">
               <VBox.margin><Insets bottom="20.0" left="20.0" right="20.0" /></VBox.margin>
               <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
               <children>
                  <Label text="Registered Owners" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
                                    <TableView fx:id="ownersTable" VBox.vgrow="ALWAYS">
                    <columns>
                      <!--  التصحيح: إضافة fx:id المطابق لأسماء المتغيرات في الكنترولر -->
                      <TableColumn fx:id="nameColumn" prefWidth="250.0" text="OWNER NAME" />
                      <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="PHONE" />
                      <TableColumn fx:id="emailColumn" prefWidth="250.0" text="EMAIL" />
                      <TableColumn fx:id="addressColumn" prefWidth="300.0" text="ADDRESS" />
                      <TableColumn fx:id="actionsColumn" prefWidth="200.0" text="ACTIONS" />
                    </columns>
                     <VBox.margin><Insets top="20.0" /></VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>