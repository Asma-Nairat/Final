<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- تم استخدام BorderPane كهيكل أساسي -->

<BorderPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@/fxml/tenants-style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javaapp3.TenantsViewController">
   
   <!-- 1. القائمة الجانبية توضع في قسم "left" -->
   <left>
      <VBox prefWidth="250.0" styleClass="sidebar" stylesheets="@tenants-style.css">
         <children>
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="250.0" styleClass="sidebar-title" text="ARM System" />
            <Button onAction="#handleGoToDashboard" styleClass="sidebar-button" text="Dashboard" />
            <Button onAction="#handleGoToOwners" styleClass="sidebar-button" text="Owners" />
            <Button styleClass="sidebar-button-selected" text="Tenants" />
            <Button onAction="#handleGoToApartments" styleClass="sidebar-button" text="Apartments" />
            <Button onAction="#handleGoToPayments" styleClass="sidebar-button" text="Payments" />
         </children>
      </VBox>
   </left>

   <!-- 2. المحتوى الرئيسي يوضع في قسم "center" -->
   <center>
      <VBox style="-fx-background-color: #f4f4f4;" BorderPane.alignment="CENTER">
         <children>
            <!-- الشريط العلوي (العنوان والزر) -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" spacing="20.0">
               <padding><Insets left="20.0" right="20.0" /></padding>
               <children>
                  <Label text="Tenants"><font><Font name="System Bold" size="36.0" /></font></Label>
                  <Region stylesheets="@tenants-style.css" HBox.hgrow="ALWAYS" />
                  <Button fx:id="addTenantButton" onAction="#handleAddTenantButton" styleClass="add-button" text="Add Tenant" />
               </children>
            </HBox>
            
            <!-- الحاوية البيضاء للجدول -->
            <VBox style="-fx-background-color: white; -fx-background-radius: 10;" stylesheets="@tenants-style.css" VBox.vgrow="ALWAYS">
               <VBox.margin><Insets bottom="20.0" left="20.0" right="20.0" /></VBox.margin>
               <padding><Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /></padding>
               <children>
                  <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Registered Tenants" />
                  
                  <!-- 3. الجدول يأخذ خاصية "vgrow" ليتمدد ويملأ المساحة -->
                  <TableView fx:id="tenantsTable" stylesheets="@tenants-style.css" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="tenantColumn" prefWidth="200.0" text="TENANT" />
                      <TableColumn fx:id="phoneColumn" prefWidth="150.0" text="PHONE" />
                      <TableColumn fx:id="statusColumn" prefWidth="100.0" text="STATUS" />
                      <TableColumn fx:id="occupationColumn" prefWidth="150.0" text="OCCUPATION" />
                      <TableColumn fx:id="addressColumn" prefWidth="300.0" text="ADDRESS" />
                      <TableColumn fx:id="detailsColumn" prefWidth="100.0" text=" " />
                    </columns>
                     <VBox.margin><Insets top="20.0" /></VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
